<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <template id="report_saleorder_document_line_number"   inherit_id="sale.report_saleorder_document" >
        <xpath expr="//table[hasclass('table', 'table-sm')]/thead/tr/th[1]" position="before">
            <th>
                <strong>Sequence</strong>
            </th>
        </xpath>
        <xpath
            expr="//table[hasclass('table', 'table-sm')]/tbody/t/tr[1]/t[1]/td[1]" position="before">
            <td>
                <span t-field="line.sequence" />
            </td>
        </xpath>
    </template>
</odoo>
